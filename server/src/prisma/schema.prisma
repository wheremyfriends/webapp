generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Convention is singular, CamelCase
model User {
  id     Int      @id @default(autoincrement())
  roomID String
  name   String
  Lesson Lesson[]

  @@unique([roomID, name])
}

model Lesson {
  id         Int    @id @default(autoincrement())
  semester   Int
  moduleCode String
  lessonType String
  classNo    String
  user       User   @relation(fields: [userID], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userID     Int

  @@unique([userID, semester, moduleCode, lessonType, classNo])
}
